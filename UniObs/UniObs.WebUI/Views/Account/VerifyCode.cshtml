@model UniObs.WebUI.Models.VerifyCodeViewModel
@{
    Layout = null;
    ViewData["Title"] = "Doğrulama Kodu";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet" />

    <style>
        body {
            margin: 0;
            background: radial-gradient(circle at top, #2563eb 0, #0f172a 45%, #020617 100%);
            min-height: 100vh;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        }

        .obs-login-wrapper {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 16px;
        }

        .obs-login-card {
            background: #ffffff;
            border-radius: 18px;
            box-shadow: 0 20px 40px rgba(15, 23, 42, 0.25);
            padding: 32px 28px;
            width: 100%;
            max-width: 420px;
        }

        .obs-login-title {
            font-size: 1.6rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 4px;
            color: #0f172a;
        }

        .obs-login-subtitle {
            font-size: 0.9rem;
            text-align: center;
            color: #6b7280;
            margin-bottom: 20px;
        }

        .obs-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            font-size: 0.75rem;
            padding: 4px 10px;
            border-radius: 999px;
            background: #e0f2fe;
            color: #0369a1;
            font-weight: 500;
            margin: 0 auto 16px auto;
        }

        .obs-login-btn {
            border-radius: 999px;
            font-weight: 600;
            padding: 10px 0;
            background: linear-gradient(90deg, #2563eb, #1d4ed8);
            border: none;
        }

            .obs-login-btn:hover {
                background: linear-gradient(90deg, #1d4ed8, #1e3a8a);
            }

        .validation-summary-errors {
            background: #fef2f2;
            border-radius: 10px;
            padding: 8px 10px;
            font-size: 0.85rem;
            margin-bottom: 10px;
            color: #b91c1c;
            border: 1px solid #fecaca;
        }
    </style>
</head>
<body>
    <div class="obs-login-wrapper">
        <div class="obs-login-card">

            <div class="text-center mb-2">
                <div class="obs-badge">
                    <span>🔐</span>
                    <span>İki Aşamalı Doğrulama</span>
                </div>
            </div>

            <h3 class="obs-login-title">Doğrulama Kodu</h3>
            <p class="obs-login-subtitle">
                E-posta adresinize gönderilen 6 haneli kodu girerek girişinizi tamamlayın.
            </p>

            <div asp-validation-summary="All" class="text-danger"></div>

            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-danger d-flex align-items-center py-2 px-3 mb-3" style="border-radius: 10px;">
                    <span class="me-2">⚠️</span>
                    <span>@Model.Message</span>
                </div>
            }

            <form asp-action="VerifyCode" method="post">
                <div class="mb-4">
                    <label asp-for="Code" class="form-label">Doğrulama Kodu</label>
                    <input asp-for="Code" class="form-control text-center" maxlength="6" />
                    <span asp-validation-for="Code" class="text-danger" style="font-size:0.8rem;"></span>
                </div>

                @* Kalan süreyi JS ile paylaşmak için gizli alan *@
                <input asp-for="RemainingSeconds" type="hidden" id="RemainingSeconds" />

                <button type="submit" class="btn btn-primary w-100 obs-login-btn">
                    Girişi Tamamla
                </button>
            </form>

            <div class="mt-3 text-center">
                <span id="timerText" class="text-secondary" style="font-size:0.85rem;"></span>

                <button id="resendBtn"
                        type="button"
                        class="btn btn-outline-primary btn-sm mt-2"
                        style="display:none;">
                    Tekrar Kod Gönder
                </button>
            </div>

        </div>
    </div>

    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        const hiddenRemaining = document.getElementById("RemainingSeconds");

        let timeLeft = parseInt(hiddenRemaining.value) || 0;
        const timerText = document.getElementById("timerText");
        const resendBtn = document.getElementById("resendBtn");

        function startTimer() {
            if (timeLeft <= 0) {
                timerText.textContent = "Kodun süresi doldu.";
                resendBtn.style.display = "inline-block";
                return;
            }

            timerText.textContent = "Kodun süresi: " + timeLeft + " saniye";

            const intervalId = setInterval(() => {
                timeLeft--;

                if (timeLeft > 0) {
                    timerText.textContent = "Kodun süresi: " + timeLeft + " saniye";
                    hiddenRemaining.value = timeLeft; // formdaki değeri güncelle
                } else {
                    clearInterval(intervalId);
                    hiddenRemaining.value = 0;
                    timerText.textContent = "Kodun süresi doldu.";
                    resendBtn.style.display = "inline-block";
                }
            }, 1000);
        }

        startTimer();

        resendBtn.addEventListener("click", function () {
            resendBtn.disabled = true;

            fetch("@Url.Action("ResendCode", "Account")", {
                method: "POST"
            }).then(r => {
                if (r.ok) {
                    alert("Yeni doğrulama kodu e-postanıza gönderildi.");
                    timeLeft = 20;
                    hiddenRemaining.value = 20;
                    resendBtn.style.display = "none";
                    resendBtn.disabled = false;
                    startTimer();
                } else {
                    alert("Kod gönderilirken bir hata oluştu.");
                    resendBtn.disabled = false;
                }
            }).catch(err => {
                alert("Kod gönderilirken bir hata oluştu.");
                resendBtn.disabled = false;
            });
        });
    </script>
</body>
</html>
